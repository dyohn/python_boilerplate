[MASTER]
ignore-patterns=
    test_(.*).py,

ignored-modules=
    pyrise,
    pyrise.pyspark,
    pyspark.sql,
    pyspark.sql.functions,

[MESSAGES CONTROL]
disable=
    C0111, # Missing function docstring
    C0330, # bad-continuation (conflict with Black)
    W0223, # abstract-method (false positives)
    W0613, # Unused arguments
    W0622, # redefined-builtin
    R0201, # no-self-use (false positives)
    R0801, # similar lines between files
    R0901, # too-many-ancestors
    R0902, # too-many-instance-attributes
    R0903, # too few public methods
    R0914, # too-many-locals
    pointless-statement,
    invalid-name,
    dangerous-default-value,

